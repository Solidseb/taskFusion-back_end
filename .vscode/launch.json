{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "runtimeArgs": [
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "args": ["${workspaceFolder}/src/main.ts"],
        "autoAttachChildProcesses": true,
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  